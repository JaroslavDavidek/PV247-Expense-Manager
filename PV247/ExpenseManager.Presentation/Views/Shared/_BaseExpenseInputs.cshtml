@model ExpenseManager.Presentation.Models.Expense.CreateViewModel

<div class="form-group">
    <label asp-for="Money" class="col-md-4 control-label">Ammount in dollars</label>
    <div class="col-md-6">
        <input asp-for="Money" class="form-control" />
        <span asp-validation-for="Money" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label asp-for="Description" class="col-md-4 control-label"></label>
    <div class="col-md-6">
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label asp-for="Created" class="col-md-4 control-label"></label>
    <div class="col-md-6">
        <input asp-for="Created" class="form-control" value="@DateTime.UtcNow.ToShortDateString()" />
        <span asp-validation-for="Created" class="text-danger" />
    </div>
</div>
<div class="form-group">

    <label asp-for="TypeId" class="col-md-4 control-label">Category</label>
    <div class="col-md-6">
        <select class="form-control" asp-for="TypeId" asp-items="Model.SelectCostTypes"></select>
    </div>
</div>
<div class="form-group">
    <label class="col-md-4 control-label"></label>
    <div class="col-md-6">
        <div class="checkbox">
            <input class="income-switch" data-on-color="success" data-off-color="danger" data-on-text="Income" data-off-text="Expense" asp-for="IsIncome" style="margin-left:0px" />
        </div>
    </div>
</div>