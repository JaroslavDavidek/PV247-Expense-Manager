@model List<ExpenseManager.Presentation.Models.ViewComponent.DayTotalBalanceViewModel>

<div>
    <canvas id="chart" ></canvas>
</div>

<script>
    var ctx = $("#chart");

    var data = {
        labels: [
            @foreach (var dayBalance in Model)
            {
                <text>
                    "@dayBalance.Date.ToShortDateString()",
                </text>
            }
        ],
        datasets: [
            {
                label: "Balance",
                fill: false,
                lineTension: 0.1,
                backgroundColor: "rgba(0,166,90,1)",
                borderColor: "rgba(0,166,90,1)",
                borderCapStyle: 'butt',
                borderDash: [],
                borderDashOffset: 0.0,
                borderJoinStyle: 'miter',
                pointBorderColor: "rgba(0,141,76,1)",
                pointBackgroundColor: "rgba(0,166,90,1)",
                pointBorderWidth: 5,
                pointHoverRadius: 5,
                pointHoverBackgroundColor: "rgba(0,141,76,1)",
                pointHoverBorderColor: "rgba(220,220,220,1)",
                pointHoverBorderWidth: 2,
                pointRadius: 1,
                pointHitRadius: 10,
                data: [
                    @foreach (var dayBalance in Model)
                    {
                        <text>
                           @( (int) dayBalance.TotalBalance) ,
                        </text>
                    }
                ],
                spanGaps: false
            },
            
        ]
    };

    var lineChart = new Chart(ctx, {
        type: 'line',
        data: data,
        options: {
            legend: {
                display: false,
                labels: {
                    display: false
                }
            }
        }
    });
</script>