@model ExpenseManager.Presentation.Models.CostType.IndexViewModel

@section title
{
    Categories
}

<div class="col-md-9 content-holder">
    @if (Model.CurrentUser.HasFullRights)
    {
        <a href="@Url.Action("Create", "Category")" class="add-new">+</a>
    }
    <h1>Categories</h1>
    <br />
    <table class="table">
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>@category.Name</td>
                <td><a href="@Url.Action("Edit", "Category", new { id = category.Id })">Edit</a></td>
            </tr>
        }
    </table>
</div>