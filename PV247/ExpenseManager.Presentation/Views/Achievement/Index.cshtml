@model ExpenseManager.Presentation.Models.Achievement.IndexViewModel

@section title
{
    Achievements
}

<div class="col-md-9 content-holder">
    <h1>Achievements</h1>
    @foreach (var badge in Model.AchievedBadges)
    {
        <div class="achievement-zoom">
            <img src="~/images/badge.png" />
            <span>@badge.BadgeDescription</span>
        </div>
    }
    
    <h2 style="clear: both">Not achieved</h2>
    <table class="table">
        @foreach (var badge in Model.NotAchievedBadges)
        {
            <tr>
                <td style="width: 20px"><img class="small-achievement-image" src="~/images/badge.png" /></td>
                <td>@badge.Description</td>
            </tr>
        }
    </table>
</div>