@model ExpenseManager.Presentation.Models.Plan.CreateViewModel

@section title
{
    Create new plan
}

<div class="col-sm-9 content-holder">
    <h2>New plan</h2>

    <form asp-action="Store">
        <div class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="col-md-2 control-label">Description</label>
                <div class="col-md-10">
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PlanType" class="col-md-2 control-label">Based on</label>
                <div class="col-md-10">
                    <select name="PlanType" class="form-control">
                        <option value="1">Saving</option>
                        <option value="2">Spending</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PlannedMoney" class="col-md-2 control-label">Ammount</label>
                <div class="col-md-10">
                    <input asp-for="PlannedMoney" class="form-control" />
                    <span asp-validation-for="PlannedMoney" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PlannedTypeId" class="col-md-2 control-label">Category</label>
                <div class="col-md-10">
                    <select name="PlannedTypeId" id="PlannedTypeId" class="form-control">
                        @foreach (var costType in Model.CostTypes)
                        {
                            <option value="@costType.Id">@costType.Name</option>
                        }
                    </select>
                    <span asp-validation-for="PlannedTypeId" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Deadline" class="col-md-2 control-label">Deadline</label>
                <div class="col-md-10">
                    <input asp-for="Deadline" class="form-control" value="" placeholder="@DateTime.Now.ToShortDateString()"/>
                    <span asp-validation-for="Deadline" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>

    <div>
        <a asp-action="Index">Back to all plans</a>
    </div>
</div>

